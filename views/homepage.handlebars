<div class="container">
    <div class="row">
        <form class="col s6">
            <div class="row">
                <h2 class="header">Login</h2>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" class="validate email-login">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" class="validate password-login">
                    <label for="password">Password</label>
                </div>
            </div>
            <button class="waves-effect waves-light btn login-form">Login</button>
        </form>
        <form class="col s6">
            <div class="row">
                <h2 class="header">Sign Up</h2>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="first_name" type="text" class="validate name-signup">
                    <label for="first_name">Full Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="last_name" type="text" class="validate username-signup">
                    <label for="last_name">Username</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" class="validate email-signup">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" class="validate password-signup">
                    <label for="password">Password</label>
                </div>
            </div>
            <button class="waves-effect waves-light btn signup-form">Sign Up</button>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>