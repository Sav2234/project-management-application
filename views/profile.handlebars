<div class="row">
  <div class="col-auto">
    <h2 class="header">Welcome, {{user.full_name}}!</h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s6">
      <div class="row">
        <h3 class="header">Create a New Project:</h3>
        <form class="form new-project-form">
          <div class="form-group">
            <label for="project-name">Name of Project:</label>
            <input class="form-input" type="text" id="project-name" name="project-name" />
          </div>
          <div class="form-group">
            <label for="your team">Team Members:</label>
            <input class="form-input" type="text" />
          </div>
          <div class="form-group">
            <label for="your team">Deadline:</label>
            <input type="text" class="datepicker">
          </div>
          <div class="form-group">
            <!-- Dropdown Trigger -->
            <a class='dropdown-trigger btn' href='#' data-target='dropdown1'>Status</a>
            <!-- Dropdown Structure -->
            <ul id='dropdown1' class='dropdown-content'>
              <li><a href="#!">Not Started</a></li>
              <li><a href="#!">In Progress</a></li>
              <li><a href="#!">Complete</a></li>
            </ul>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>


      <div class="col-md-6 project-list">
        <h3>Current Projects:</h3>

        {{#each user.user_projects}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="">{{this.name}}</a></h4>
            <h4><a href="">{{this.deadline}}</a></h4>
          </div>
          <div class="col-md-4">
            {{!-- <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button> --}}
          </div>
        </div>
        {{/each}}
      </div>

    </div>
  </div>
</div>


<script src="/js/profile.js"></script>